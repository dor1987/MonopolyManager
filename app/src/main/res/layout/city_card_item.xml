<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:gravity="left"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/city_card_item_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City name:"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/city_card_item_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default name"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/city_card_item_name_title"
        />

    <TextView
        android:id="@+id/city_card_item_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Location:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/city_card_item_name_title"
        />

    <TextView
        android:id="@+id/city_card_item_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default location"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/city_card_item_location_title"
       android:layout_below="@+id/city_card_item_name_text"
        />

    <TextView
        android:id="@+id/city_card_item_is_expired_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City State:"
        android:layout_below="@+id/city_card_item_location_title"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/city_card_item_is_expired_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default state"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/city_card_item_is_expired_title"
        android:layout_below="@+id/city_card_item_location_text"
        />
    <TextView
        android:id="@+id/city_card_item_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Price:"
        android:layout_below="@+id/city_card_item_is_expired_title"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/city_card_item_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default location"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/city_card_item_price_title"
        android:layout_below="@+id/city_card_item_is_expired_text"
        />
    <TextView
        android:id="@+id/city_card_item_creator_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Creator:"
        android:layout_below="@+id/city_card_item_price_title"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/city_card_item_creator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default location"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/city_card_item_creator_title"
        android:layout_below="@+id/city_card_item_price_text"
        />

    <TextView
        android:id="@+id/city_card_item_fine_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Fine:"
        android:layout_below="@+id/city_card_item_creator_title"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/city_card_item_fine_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default location"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/city_card_item_fine_title"
        android:layout_below="@+id/city_card_item_creator_text"
        />

    <com.cleveroad.sy.cyclemenuwidget.CycleMenuWidget
        android:id="@+id/itemCycleMenuWidget"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_centerInParent="true"
        app:cm_autoMaxRadius="220dp"
        app:cm_autoMinRadius="10dp"
        app:cm_corner="right_bottom"
        app:cm_fixedRadius="200dp"
        app:cm_item_background_tint="#7291ef"
        app:cm_radius_scale_type="auto"
        app:cm_ripple_color="#ffffff"
        app:cm_scroll_type="endless">

    </com.cleveroad.sy.cyclemenuwidget.CycleMenuWidget>

</RelativeLayout>

</android.support.v7.widget.CardView>